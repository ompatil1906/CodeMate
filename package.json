{
  "name": "codemate",
  "displayName": "CodeMate AI Assistant",
  "description": "AI coding assistant that reads files and answers user queries using Groq API with LLaMA 3.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": ["Machine Learning", "Programming Languages"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codemate.queryFile",
        "title": "CodeMate: Query File"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codemate",
          "title": "CodeMate",
          "icon": "logo.png"
        }
      ]
    },
    "views": {
      "codemate": [
        {
          "type": "webview",
          "id": "codemateView",
          "name": "CodeMate Assistant"
        }
      ]
    },
    "configuration": {
      "title": "CodeMate",
      "properties": {
        "codemate.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for AI service"
        }
      }
    }
  },
  "extensionDependencies": ["ms-vscode.vscode-typescript-next"],
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w",
    "prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.3.2"
  }
}
