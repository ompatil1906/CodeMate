{
  "name": "codemate-ai",
  "displayName": "CodeMate AI Assistant",
  "description": "AI coding assistant that answers user queries using Groq API with LLaMA 3.",
  "version": "1.0.3",
  "publisher": "OmPatil",
  "icon": "extension/logo.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ompatil1906/CodeMate"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:codemate.queryFile",
    "onView:codemateView",
    "onStartupFinished"
  ],
  "files": [
    "LICENSE",
    "dist/**/*",
    "README.md",
    "package.json",
    "resources/dark/codemate.svg",
    "extension/**/*"
  ],
  "main": "dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codemate.queryFile",
        "title": "CodeMate: Query File"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codemate",
          "title": "CodeMate",
          "icon": "resources/dark/codemate.svg"
        }
      ]
    },
    "views": {
      "codemate": [
        {
          "type": "webview",
          "id": "codemateView",
          "name": "CodeMate Assistant"
        }
      ]
    },
    "configuration": {
      "title": "CodeMate",
      "properties": {
        "codemate.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for AI service"
        }
      }
    }
  },
  "extensionDependencies": [
    "ms-vscode.vscode-typescript-next"
  ],
  "scripts": {
    "watch": "tsc -watch -p ./",
    "compile": "tsc -p ./",
    "build": "tsc"
  },
  "devDependencies": {
    "@types/node": "^22.13.8",
    "@types/vscode": "^1.75.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.3.2",
    "marked": "^15.0.7"
  }
}
